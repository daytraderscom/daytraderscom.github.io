---
import PlainLink from "./PlainLink.astro";
import { Image } from "astro:assets";
import referralImg from './referral.png';
---

<section id="success" class="relative w-full flex flex-col items-center">
  <div class="overflow-hidden py-16 w-full mx-auto max-w-7xl">
    <div class="px-4 lg:px-8">
      <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
        <div class="lg:pr-8 lg:pt-4 flex items-start flex-col justify-center">
          <div class="lg:max-w-lg">
            <h2 class="font-thin uppercase text-2xl sm:text-3xl lg:text-4xl md:text-left w-full [conten]"><span class="font-bold">20%</span> Lifetime <span class="font-bold">Referral Commission</span></h2>
          </div>
          <p class="mt-6 text-lg leading-8 text-zinc-400">Enjoy the lasting benefits of earning a generous commission every month for the lifetime of every customer you refer. Be part of this prosperous journey with us. Start referring and earning for a lifetime today!</p>
          <div class="mt-6">
            <PlainLink href="#" color="green">Become an Affiliate</PlainLink>
          </div>
        </div>
        <div class="flex items-center">
          <div class="flex-shrink-0 w-full relative">
            <div class="absolute inset-0 bg-zinc-950/70"></div>
            <Image src={referralImg} alt="Traders shaking hands" class="w-full" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
