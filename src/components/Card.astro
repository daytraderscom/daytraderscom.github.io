---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="list-none flex bg-black shadow-lg p-1 ring-1 ring-main/20 hover:ring-main/50">
	<a class="p-4" href={href}>
		<h2 class="text-xl font-thin">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="text-base">
			{body}
		</p>
	</a>
</li>